// HELPER FUNCTIONS
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

function generateQRCodeUrl(partnerId) {
  const landingPageUrl = `${LANDING_PAGE_BASE}?id=${partnerId}`;
  return `https://api.qrserver.com/v1/create-qr-code/?size=500x500&data=${encodeURIComponent(landingPageUrl)}`;
}

function downloadQR() {
  const img = document.getElementById('qrImage');
  const link = document.createElement('a');
  link.href = img.src;
  link.download = `legacy-lounge-qr-${partnerId}.png`;
  link.click();
}

function copyLink() {
  const landingPageUrl = `${LANDING_PAGE_BASE}?id=${partnerId}`;
  navigator.clipboard.writeText(landingPageUrl).then(() => {
    alert('âœ… Link copied to clipboard!');
  }).catch(() => {
    prompt('Copy this link:', landingPageUrl);
  });
}

function showError(message) {
  document.getElementById('content').innerHTML = `
    <div class="error">
      <h2>âš ï¸ Error</h2>
      <p style="margin: 20px 0; font-size: 16px;">${message}</p>
      <p style="margin-top: 30px;">
        Need help? Call K.Smith: <a href="tel:8165301520">816-530-1520</a>
      </p>
    </div>
  `;
}
</script>

