<script>
const SUPABASE_URL = 'https://zgnceundsigimwujwrzu.supabase.co';
const SUPABASE_ANON_KEY = 'sb_publishable_Vdl9J8D_kkmxhPq1QwU33g__b1_AGNF';
const CALENDAR_LINK = 'https://calendar.app.google/hHSCmkVBcuFM7oVe6';

/* GET PARTNER ID FROM URL */
const urlParams = new URLSearchParams(window.location.search);
const partnerId = urlParams.get('partner');

if (!partnerId) {
  document.getElementById('content').innerHTML = `
    <div class="error">
      <h2>‚ö†Ô∏è Partner ID Missing</h2>
      <p>Please use the link provided in your welcome email.</p>
      <p>Need help? Call K.Smith: <a href="tel:8165301520" style="color:#d3fb1b">816-530-1520</a></p>
    </div>
  `;
} else {
  loadPartnerDashboard();
}

/* LOAD PARTNER DASHBOARD */
async function loadPartnerDashboard() {
  try {
    // Fetch partner data from Supabase
    const response = await fetch(`${SUPABASE_URL}/rest/v1/partners?partner_id=eq.${partnerId}&select=*`, {
      headers: {
        'apikey': SUPABASE_ANON_KEY,
        'Authorization': `Bearer ${SUPABASE_ANON_KEY}`
      }
    });
    
    const data = await response.json();
    
    if (!data || data.length === 0) {
      showError('Partner not found. Please contact K.Smith at 816-530-1520');
      return;
    }
    
    const partner = data[0];
    
    // Fetch orders for this partner
    const ordersResponse = await fetch(`${SUPABASE_URL}/rest/v1/orders?partner_id=eq.${partnerId}&select=*&order=created_at.desc&limit=10`, {
      headers: {
        'apikey': SUPABASE_ANON_KEY,
        'Authorization': `Bearer ${SUPABASE_ANON_KEY}`
      }
    });
    
    const orders = await ordersResponse.json() || [];
    
    renderDashboard(partner, orders);
    
  } catch (err) {
    console.error('Error loading dashboard:', err);
    showError('Error loading dashboard. Please try again or contact support.');
  }
}

/* RENDER DASHBOARD */
function renderDashboard(partner, orders) {
  const status = partner.status || 'Pending';
  const installScheduled = partner.setup_scheduled_date || null;
  const installComplete = partner.setup_completed_date || null;
  const isLive = status === 'Active' || status === 'Live';
  
  let html = `
    <!-- PARTNER INFO CARD -->
    <div class="card">
      <h2>Welcome, ${partner.business_name}!</h2>
      <p><strong>Contact Person:</strong> ${partner.contact_person || partner.contact_name || 'N/A'}</p>
      <p><strong>Email:</strong> ${partner.contact_email || 'N/A'}</p>
      <p><strong>Status:</strong> <span style="color:${isLive ? '#0ff0b8' : '#fd26fd'};font-weight:700">${status}</span></p>
    </div>
  `;
  
  // INSTALLATION STATUS
  if (!installComplete) {
    const statusClass = installScheduled ? 'install-status' : 'install-status pending';
    html += `
      <div class="${statusClass}">
        <h2 style="color:#d3fb1b;margin-top:0">üìÖ Installation ${installScheduled ? 'Scheduled' : 'Pending'}</h2>
        ${installScheduled ? 
          `<p style="font-size:18px;margin:10px 0">Your installation is scheduled for:<br><strong style="color:#d3fb1b;font-size:24px">${new Date(installScheduled).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })}</strong></p>` :
          `<p style="margin:10px 0">Schedule your installation to get started!</p>
           <a href="${CALENDAR_LINK}" target="_blank" class="schedule-btn">üìÖ Schedule Now</a>`
        }
      </div>
    `;
  } else {
    html += `
      <div class="install-status complete">
        <h2 style="color:#0ff0b8;margin-top:0">‚úÖ Installation Complete!</h2>
        <p>Installed on: <strong>${new Date(installComplete).toLocaleDateString()}</strong></p>
        <p style="color:#d3fb1b;font-weight:700;font-size:18px;margin-top:10px">You're LIVE and earning! üéâ</p>
      </div>
    `;
  }
  
  // COMMISSION DASHBOARD
  const totalEarned = partner.commission_earned_total || 0;
  const thisMonth = partner.orders_count_this_month || 0;
  const totalOrders = partner.orders_count_total || orders.length || 0;
  
  html += `
    <div class="card">
      <h2>üí∞ Commission Dashboard</h2>
      <div class="stats-row">
        <div class="stat-box">
          <h3>Total Earned</h3>
          <p>$${parseFloat(totalEarned).toFixed(2)}</p>
        </div>
        <div class="stat-box">
          <h3>Orders This Month</h3>
          <p>${thisMonth}</p>
        </div>
        <div class="stat-box">
          <h3>Total Orders</h3>
          <p>${totalOrders}</p>
        </div>
      </div>
    </div>
  `;
  
  // QR CODE
  const qrCodeUrl = partner.qr_code_url || generateQRCodeUrl(partner.partner_id);
  const landingPageUrl = `https://prezzedbeyond.com/partner.html?id=${partner.partner_id}`;
  
  html += `
    <div class="card qr-box">
      <h2>üì± Your Legacy Lounge‚Ñ¢ QR Code</h2>
      <p>Display this QR code at your location and share it everywhere!</p>
      <img src="${qrCodeUrl}" alt="QR Code" id="qrImage">
      <div class="qr-buttons">
        <button class="qr-btn" onclick="downloadQR()">‚¨áÔ∏è Download QR</button>
        <button class="qr-btn" onclick="copyLink()">üìã Copy Link</button>
      </div>
      <p style="font-size:12px;margin-top:15px;color:#b8bac0">
        Your landing page: <a href="${landingPageUrl}" target="_blank" style="color:#d3fb1b">${landingPageUrl}</a>
      </p>
    </div>
  `;
  
  // RECENT ORDERS
  if (orders.length > 0) {
    html += `
      <div class="card">
        <h2>üì¶ Recent Orders</h2>
        <div style="overflow-x:auto">
          <table style="width:100%;border-collapse:collapse;margin-top:15px">
            <thead>
              <tr style="border-bottom:2px solid #d3fb1b">
                <th style="text-align:left;padding:10px;color:#d3fb1b">Order #</th>
                <th style="text-align:left;padding:10px;color:#d3fb1b">Date</th>
                <th style="text-align:left;padding:10px;color:#d3fb1b">Total</th>
                <th style="text-align:left;padding:10px;color:#d3fb1b">Status</th>
              </tr>
            </thead>
            <tbody>
    `;
    
    orders.forEach(order => {
      const last4 = order.order_id ? order.order_id.slice(-4) : 'N/A';
      const date = order.created_at ? new Date(order.created_at).toLocaleDateString() : 'N/A';
      const total = order.order_total ? `$${parseFloat(order.order_total).toFixed(2)}` : 'N/A';
      const status = order.status || 'Processing';
      
      html += `
        <tr style="border-bottom:1px solid #292a30">
          <td style="padding:10px">#${last4}</td>
          <td style="padding:10px">${date}</td>
          <td style="padding:10px;font-weight:700">${total}</td>
          <td style="padding:10px">${status}</td>
        </tr>
      `;
    });
    
    html += `
            </tbody>
          </table>
        </div>
      </div>
    `;
  }
  
  // CONTACT
  html += `
    <a href="mailto:info@dopeleeprezzedbysllc.com" class="contact-btn">
      üí¨ Contact Dopelee Support
    </a>
  `;
  
  document.getElementById('content').innerHTML = html;
}

/* GENERATE QR CODE URL */
function generateQRCodeUrl(partnerId) {
  const landingPageUrl = `https://prezzedbeyond.com/partner.html?id=${partnerId}`;
  return `https://api.qrserver.com/v1/create-qr-code/?size=500x500&data=${encodeURIComponent(landingPageUrl)}`;
}

/* DOWNLOAD QR CODE */
function downloadQR() {
  const img = document.getElementById('qrImage');
  const link = document.createElement('a');
  link.href = img.src;
  link.download = `legacy-lounge-qr-${partnerId}.png`;
  link.click();
}

/* COPY LINK */
function copyLink() {
  const landingPageUrl = `https://prezzedbeyond.com/partner.html?id=${partnerId}`;
  navigator.clipboard.writeText(landingPageUrl).then(() => {
    alert('‚úÖ Link copied to clipboard!');
  });
}

/* SHOW ERROR */
function showError(message) {
  document.getElementById('content').innerHTML = `
    <div class="error">
      <h2>‚ö†Ô∏è Error</h2>
      <p>${message}</p>
      <p style="margin-top:20px">
        Need help? Call K.Smith: <a href="tel:8165301520" style="color:#d3fb1b;font-weight:700">816-530-1520</a>
      </p>
    </div>
  `;
}
</script>

