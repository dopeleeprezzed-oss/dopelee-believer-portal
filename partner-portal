// CONFIGURATION
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

const SUPABASE_URL = 'https://dyehxtiozfwlexkbalvn.supabase.co';
const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImR5ZWh4dGlvemZ3bGV4a2JhbHZuIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjU4NDYxMzMsImV4cCI6MjA4MTQyMjEzM30.dxd7otsV6WzD6dt41sWkYdseW94BRn0WI8MtFCqnAIs';
const LANDING_PAGE_BASE = 'https://www.dopeleeprezzedbys.com/partner-landing';

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// GET PARTNER ID FROM URL
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

const urlParams = new URLSearchParams(window.location.search);
const partnerId = urlParams.get('partner');

if (!partnerId) {
  document.getElementById('content').innerHTML = `
    <div class="error">
      <h2>âš ï¸ Partner ID Missing</h2>
      <p style="margin: 20px 0; font-size: 16px;">Please use the link provided in your welcome email.</p>
      <p style="margin-top: 30px;">
        Need help? Call K.Smith: <a href="tel:8165301520">816-530-1520</a>
      </p>
    </div>
  `;
} else {
  loadPartnerDashboard();
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// LOAD PARTNER DASHBOARD
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

async function loadPartnerDashboard() {
  try {
    console.log('ğŸ” Loading partner:', partnerId);
    
    // Fetch partner data
    const partnerResponse = await fetch(
      `${SUPABASE_URL}/rest/v1/partners?partner_id=eq.${partnerId}&select=*`,
      {
        headers: {
          'apikey': SUPABASE_ANON_KEY,
          'Authorization': `Bearer ${SUPABASE_ANON_KEY}`
        }
      }
    );
    
    const partnerData = await partnerResponse.json();
    
    if (!partnerData || partnerData.length === 0) {
      showError('Partner not found. Please contact K.Smith at 816-530-1520');
      return;
    }
    
    const partner = partnerData[0];
    console.log('âœ… Partner loaded:', partner.business_name);
    
    // Fetch orders for this partner
    const ordersResponse = await fetch(
      `${SUPABASE_URL}/rest/v1/orders?partner_id=eq.${partnerId}&select=*&order=created_at.desc&limit=20`,
      {
        headers: {
          'apikey': SUPABASE_ANON_KEY,
          'Authorization': `Bearer ${SUPABASE_ANON_KEY}`
        }
      }
    );
    
    const orders = await ordersResponse.json() || [];
    console.log(`ğŸ“¦ Loaded ${orders.length} orders`);
    
    renderDashboard(partner, orders);
    
  } catch (err) {
    console.error('âŒ Error loading dashboard:', err);
    showError('Error loading dashboard. Please try again or contact support at 816-530-1520');
  }
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// RENDER DASHBOARD
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

function renderDashboard(partner, orders) {
  const status = partner.status || 'Pending';
  const installScheduled = partner.setup_scheduled_date || null;
  const installComplete = partner.setup_completed_date || null;
  const isLive = status === 'Active' || status === 'Live' || status === 'Scheduled';
  
  // CALCULATE REAL COMMISSIONS FROM ORDERS
  let totalEarned = 0;
  let thisMonthOrders = 0;
  const currentMonth = new Date().getMonth();
  const currentYear = new Date().getFullYear();
  
  orders.forEach(order => {
    const orderTotal = parseFloat(order.order_total) || 0;
    const commission = orderTotal * 0.10; // 10% commission
    totalEarned += commission;
    
    const orderDate = new Date(order.created_at);
    if (orderDate.getMonth() === currentMonth && orderDate.getFullYear() === currentYear) {
      thisMonthOrders++;
    }
  });
  
  let html = `
    <!-- PARTNER INFO CARD -->
    <div class="card">
      <h2>ğŸ‘‹ Welcome, ${partner.business_name}!</h2>
      <p><strong>Contact Person:</strong> ${partner.contact_name || 'N/A'}</p>
      <p><strong>Email:</strong> ${partner.contact_email || 'N/A'}</p>
      <p><strong>Phone:</strong> ${partner.contact_phone || 'N/A'}</p>
      <p><strong>Status:</strong> <span style="color:${isLive ? '#0ff0b8' : '#fd26fd'};font-weight:700">${status}</span></p>
    </div>
  `;
  
  // INSTALLATION STATUS
  if (!installComplete) {
    const statusClass = installScheduled ? 'install-status' : 'install-status pending';
    html += `
      <div class="${statusClass}">
        <h2 style="color:#d3fb1b;margin-top:0">ğŸ“… Installation ${installScheduled ? 'Scheduled' : 'Pending'}</h2>
        ${installScheduled ? 
          `<p style="font-size:18px;margin:10px 0">Your installation is scheduled for:<br><strong style="color:#d3fb1b;font-size:24px">${new Date(installScheduled).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })}</strong></p>
           <p style="margin-top:15px;color:#b8bac0;font-size:15px;">We'll bring everything needed for a professional setup. See you soon!</p>` :
          `<p style="margin:10px 0;font-size:16px;color:#b8bac0;">Your installation date will be confirmed via email within 24-48 hours.</p>
           <p style="margin-top:15px;">Questions? Call us at <a href="tel:8165301520" style="color:#d3fb1b;font-weight:700;text-decoration:none;">816-530-1520</a></p>`
        }
      </div>
    `;
  } else {
    html += `
      <div class="install-status complete">
        <h2 style="color:#0ff0b8;margin-top:0">âœ… Installation Complete!</h2>
        <p style="font-size:16px;">Installed on: <strong>${new Date(installComplete).toLocaleDateString()}</strong></p>
        <p style="color:#d3fb1b;font-weight:700;font-size:20px;margin-top:15px;">You're LIVE and earning! ğŸ‰</p>
      </div>
    `;
  }
  
  // COMMISSION DASHBOARD
  html += `
    <div class="card">
      <h2>ğŸ’° Commission Dashboard</h2>
      <p style="margin-bottom:15px;">You earn 10% commission on every order. Commissions are paid monthly by the 10th via check.</p>
      <div class="stats-row">
        <div class="stat-box">
          <h3>Total Earned</h3>
          <p>$${totalEarned.toFixed(2)}</p>
        </div>
        <div class="stat-box">
          <h3>Orders This Month</h3>
          <p>${thisMonthOrders}</p>
        </div>
        <div class="stat-box">
          <h3>Total Orders</h3>
          <p>${orders.length}</p>
        </div>
      </div>
    </div>
  `;
  
  // QR CODE - LANDING PAGE FOR CUSTOMERS
  const landingPageUrl = `${LANDING_PAGE_BASE}?id=${partner.partner_id}`;
  const qrCodeUrl = partner.qr_code_url || generateQRCodeUrl(partner.partner_id);
  
  html += `
    <div class="card qr-box">
      <h2>ğŸ“± Your Customer QR Code</h2>
      <p style="margin-bottom:10px;">This QR code takes customers to your product showcase page. Share it everywhere to boost your sales!</p>
      <img src="${qrCodeUrl}" alt="QR Code" id="qrImage">
      <div class="qr-buttons">
        <button class="qr-btn" onclick="downloadQR()">â¬‡ï¸ Download QR</button>
        <button class="qr-btn" onclick="copyLink()">ğŸ“‹ Copy Link</button>
      </div>
      <p style="font-size:12px;margin-top:20px;color:#666;word-break:break-all;">
        Customer landing page:<br>
        <a href="${landingPageUrl}" target="_blank" style="color:#0ff0b8;text-decoration:none;font-weight:600;">${landingPageUrl}</a>
      </p>
      <div style="background:rgba(15,240,184,0.1);border:1px solid rgba(15,240,184,0.3);border-radius:10px;padding:15px;margin-top:20px;text-align:left;">
        <p style="margin:0;font-size:14px;color:#0ff0b8;font-weight:700;">ğŸ’¡ Ways to Share Your QR Code:</p>
        <ul style="margin:10px 0 0 20px;font-size:13px;color:#b8bac0;line-height:1.8;">
          <li>Print on business cards to hand out</li>
          <li>Share with staff to distribute to clients</li>
          <li>Post in common areas of your location</li>
          <li>Include in emails or newsletters</li>
          <li>Share on social media</li>
        </ul>
        <p style="margin:10px 0 0;font-size:13px;color:#b8bac0;"><strong>Every order placed = 10% commission for you!</strong></p>
      </div>
    </div>
  `;
  
  // RECENT ORDERS
  if (orders.length > 0) {
    html += `
      <div class="card">
        <h2>ğŸ“¦ Recent Orders</h2>
        <div style="overflow-x:auto">
          <table>
            <thead>
              <tr>
                <th>Order #</th>
                <th>Date</th>
                <th>Total</th>
                <th>Commission</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
    `;
    
    orders.forEach(order => {
      const last4 = order.order_id ? order.order_id.slice(-4) : 'N/A';
      const date = order.created_at ? new Date(order.created_at).toLocaleDateString() : 'N/A';
      const total = parseFloat(order.order_total) || 0;
      const commission = total * 0.10;
      const status = order.status || 'Processing';
      
      html += `
        <tr>
          <td>#${last4}</td>
          <td>${date}</td>
          <td style="font-weight:700">$${total.toFixed(2)}</td>
          <td style="color:#0ff0b8;font-weight:700">$${commission.toFixed(2)}</td>
          <td>${status}</td>
        </tr>
      `;
    });
    
    html += `
            </tbody>
          </table>
        </div>
      </div>
    `;
  } else {
    html += `
      <div class="card">
        <h2>ğŸ“¦ Orders</h2>
        <p style="text-align:center;padding:40px 0;color:#666;font-size:16px;">
          No orders yet! Share your QR code to start earning commissions. ğŸ’°
        </p>
      </div>
    `;
  }
  
  // CONTACT
  html += `
    <a href="mailto:info@dopeleeprezzedbysllc.com" class="contact-btn">
      ğŸ’¬ Contact Dopelee Support
    </a>
  `;
  
  document.getElementById('content').innerHTML = html;
}

